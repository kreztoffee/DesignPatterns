{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ - build",
            "command": "/usr/bin/clang++",
            "args": [
                "-Wall",
				"-Wextra",
				"-Wpedantic",
				"-std=c++17",
                "-I${workspaceFolder}/include",
				"${workspaceFolder}/src/*.cpp",
				"-o",
                "${workspaceFolder}/build/example"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}